
@{
    ViewBag.Title = "Display";
}

<link rel=" stylesheet" type="text/css" href="~/Views/Dictionary/StyleSheet1.css" />

<h2>Display</h2>

<div class="w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
    <h3 class="w3-bar-item">Menu</h3>
    <a href="@Url.Action("AddOne", "Dictionary")" class="w3-bar-item w3-button">Add one time to Dictionary</a>
    <a href="@Url.Action("AddList", "Dictionary")" class="w3-bar-item w3-button">Add Huge List of Items to Dictionary</a>
    <a href="@Url.Action("Display", "Dictionary")" class="w3-bar-item w3-button">Display Dictionary</a>
    <a href="@Url.Action("Remove", "Dictionary")" class="w3-bar-item w3-button">Delete from Dictionary</a>
    <a href="@Url.Action()" class="w3-bar-item w3-button">Clear Dictionary</a>
    <a href="@Url.Action()" class="w3-bar-item w3-button">Search Dictionary</a>
    <a href="@Url.Action("Index", "Home")" class="w3-bar-item w3-button">Return to Main Menu</a>
</div>

<div style="margin-left:25%">
    <h2>Dictionary</h2>
</div>

<table style="margin-left:25%; width: 50%">
    <!--Create table and load values from dictionary-->
    <caption>Diabolical Dictionary Display</caption>
    <tr>
        <th>Key</th>
        <th>Value</th>
    </tr>
    @foreach (var item in ViewBag.display)
    {
        <tr>
            <td>@item.Key</td>
            <td>@item.Value</td>
        </tr>
    }

</table>

